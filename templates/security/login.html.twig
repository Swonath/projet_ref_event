{% extends 'base_auth.html.twig' %}

{% block title %}Connexion - Références Evénements{% endblock %}

{% block stylesheets %}
    {# CSS spécifique à la page de connexion #}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}
<div class="main-container">
    <!-- Left Side - Info -->
    <div class="left-side">
        <div class="left-content">
            <h1>Bienvenue sur Références Evénements</h1>
            <p>Connectez-vous pour accéder à votre espace personnel et gérer vos réservations d'emplacements.</p>
            
            <ul class="features-list">
                <li>
                    <div class="feature-icon">✓</div>
                    <span>Accès à votre tableau de bord</span>
                </li>
                <li>
                    <div class="feature-icon">✓</div>
                    <span>Gestion de vos réservations</span>
                </li>
                <li>
                    <div class="feature-icon">✓</div>
                    <span>Messagerie avec les centres</span>
                </li>
                <li>
                    <div class="feature-icon">✓</div>
                    <span>Suivi de vos documents</span>
                </li>
            </ul>
        </div>
    </div>

    <!-- Right Side - Form -->
    <div class="right-side">
        <div class="form-container">
            <div class="form-header">
                <h2 class="form-title">Connexion</h2>
                <p class="form-subtitle">Accédez à votre espace personnel</p>
            </div>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="alert alert-success">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}
                </div>
            {% endif %}

            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message }}</div>
            {% endfor %}

            <form method="post">
                <div class="form-group">
                    <label for="inputEmail" class="form-label">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" autocomplete="email" required autofocus placeholder="votre@email.com">
                </div>

                <div class="form-group">
                    <label for="inputPassword" class="form-label">Mot de passe</label>
                    <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required placeholder="••••••••">
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="form-links">
                    <div class="checkbox-group">
                        <input type="checkbox" name="_remember_me" id="remember_me">
                        <label for="remember_me">Se souvenir de moi</label>
                    </div>
                    <a href="#" class="form-link" onclick="alert('Fonctionnalité bientôt disponible'); return false;">Mot de passe oublié ?</a>
                </div>

                <button type="submit" class="btn-primary">Se connecter</button>

                <div class="info-box">
                    Pas encore de compte ? <a href="{{ path('app_register') }}">Créer un compte</a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
