{% extends 'base.html.twig' %}

{% block title %}Mentions légales - Références Événements{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/pages.css') }}">
    <style>
        .legal-container {
            max-width: 900px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        .legal-header {
            text-align: center;
            margin-bottom: 50px;
        }

        .legal-header h1 {
            font-size: 36px;
            font-weight: 700;
            color: #1a1a1a;
            margin-bottom: 12px;
        }

        .legal-header p {
            font-size: 16px;
            color: #666;
        }

        .legal-content {
            background: white;
            border-radius: 12px;
            padding: 40px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

        .legal-section {
            margin-bottom: 40px;
        }

        .legal-section h2 {
            font-size: 24px;
            font-weight: 600;
            color: #1a1a1a;
            margin-bottom: 16px;
            padding-bottom: 8px;
            border-bottom: 2px solid #6366f1;
        }

        .legal-section h3 {
            font-size: 18px;
            font-weight: 600;
            color: #333;
            margin: 20px 0 12px 0;
        }

        .legal-section p {
            font-size: 15px;
            line-height: 1.7;
            color: #444;
            margin-bottom: 12px;
        }

        .legal-section ul {
            margin-left: 20px;
            margin-bottom: 12px;
        }

        .legal-section li {
            font-size: 15px;
            line-height: 1.7;
            color: #444;
            margin-bottom: 8px;
        }

        .info-box {
            background: #f8f9fa;
            border-left: 4px solid #6366f1;
            padding: 20px;
            margin: 20px 0;
            border-radius: 4px;
        }

        .info-box strong {
            color: #6366f1;
        }

        @media (max-width: 768px) {
            .legal-content {
                padding: 24px;
            }

            .legal-header h1 {
                font-size: 28px;
            }
        }
    </style>
{% endblock %}

