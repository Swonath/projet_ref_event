{% extends 'centre_commercial/base_dashboard.html.twig' %}

{% block title %}Conversation - Centre Commercial{% endblock %}

{% block dashboard_content %}

<div class="page-header">
    <h1 class="page-title">
        {% if conversation.estArchivee %}
            <span style="background: #6b6b6b; color: white; padding: 4px 12px; border-radius: 6px; font-size: 14px; margin-right: 12px;">ARCHIV√â</span>
        {% endif %}
        Conversation avec {{ conversation.locataire.nom }}
    </h1>
    <div>
        {% if conversation.estArchivee %}
            <form method="POST" action="{{ path('centre_messages_unarchive', {id: conversation.id}) }}" style="display: inline;">
                <input type="hidden" name="_token" value="{{ csrf_token('unarchive_conversation_' ~ conversation.id) }}">
                <button type="submit" class="btn-secondary">
                    ‚Ü©Ô∏è Restaurer
                </button>
            </form>
        {% else %}
            <form method="POST" action="{{ path('centre_messages_archive', {id: conversation.id}) }}" style="display: inline;">
                <input type="hidden" name="_token" value="{{ csrf_token('archive_conversation_' ~ conversation.id) }}">
                <button type="submit" class="btn-secondary" onclick="return confirm('Archiver cette conversation ?')">
                    üì¶ Archiver
                </button>
            </form>
        {% endif %}
        <a href="{{ conversation.estArchivee ? path('centre_messages_archives') : path('centre_messages_index') }}" class="btn-secondary">‚Üê Retour</a>
    </div>
</div>

<!-- Flash messages -->
{% for message in app.flashes('success') %}
    <div class="alert alert-success">{{ message }}</div>
{% endfor %}
{% for message in app.flashes('error') %}
    <div class="alert alert-error">{{ message }}</div>
{% endfor %}

<div class="section">
    <div style="background: #f8f9fa; padding: 12px 16px; border-radius: 8px; margin-bottom: 20px;">
        <strong>Sujet:</strong> {{ conversation.sujet }}
        {% if conversation.reservation %}
            <br>
            <strong>R√©servation:</strong>
            <a href="{{ path('centre_reservations_detail', {id: conversation.reservation.id}) }}">
                {{ conversation.reservation.emplacement.titreAnnonce }}
            </a>
        {% endif %}
    </div>

    <!-- Zone des messages -->
    <div style="max-height: 500px; overflow-y: auto; padding: 20px; background: white; border-radius: 8px; margin-bottom: 20px;">
        {% for message in conversation.messages %}
            <div style="margin-bottom: 20px; display: flex; {{ message.typeExpediteur == 'centre' ? 'justify-content: flex-end' : 'justify-content: flex-start' }};">
                <div style="max-width: 70%; padding: 12px 16px; border-radius: 12px; {{ message.typeExpediteur == 'centre' ? 'background: #1a1a1a; color: white; border-bottom-right-radius: 4px;' : 'background: #f0f0f0; border-bottom-left-radius: 4px;' }}">
                    <div style="font-size: 14px;">
                        {{ message.contenu|nl2br }}
                    </div>
                    <div style="font-size: 12px; margin-top: 8px; opacity: 0.7;">
                        {{ message.dateEnvoi|date('d/m/Y H:i') }}
                        {% if message.typeExpediteur == 'centre' and message.estLu %}
                            <span style="margin-left: 8px;">‚úì‚úì Lu</span>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Formulaire d'envoi -->
    <form method="POST" action="{{ path('centre_messages_send', {id: conversation.id}) }}">
        <input type="hidden" name="_token" value="{{ csrf_token('send_message_' ~ conversation.id) }}">

        <div class="form-group">
            <label class="form-label">Votre message</label>
            <textarea name="contenu" class="form-control" rows="4" required placeholder="√âcrivez votre message..."></textarea>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-primary">
                üì§ Envoyer le message
            </button>
        </div>
    </form>
</div>

{% endblock %}
