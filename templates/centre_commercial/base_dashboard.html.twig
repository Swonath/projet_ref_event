{% extends 'base.html.twig' %}

{% block title %}Mon centre - Références Événements{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/dashboard.css') }}">
    <link rel="stylesheet" href="{{ asset('css/responsive.css') }}">
    <link rel="stylesheet" href="{{ asset('css/forms.css') }}">
{% endblock %}

{% block body %}

<!-- Header -->
<header class="header">
    <a href="{{ path('app_home_page') }}" class="logo">Références Événements</a>
    <div class="header-right">
        <div class="user-menu">
            <div class="user-avatar">
                {% if app.user.photoProfile %}
                    <img src="{{ asset('uploads/profiles/' ~ app.user.photoProfile) }}" alt="Photo de profil" style="width: 36px; height: 36px; border-radius: 50%; object-fit: cover;">
                {% else %}
                    {{ app.user.nomCentre|slice(0, 2)|upper }}
                {% endif %}
            </div>
            <span style="font-size: 14px; font-weight: 500;">{{ app.user.nomCentre }}</span>
        </div>
    </div>
</header>

<!-- Main Layout -->
<div class="main-layout">

    <!-- Sidebar -->
    {% include 'partials/_sidebar_centre.html.twig' %}

    <!-- Main Content -->
    <div class="main-content">
        {% block dashboard_content %}{% endblock %}
    </div>
</div>

{% endblock %}
